<div class="container">
  <div class="row">
    <div class="col-8 bg-white border rounded marg-top">
      <div class="row">
        <div class="col-12 text-center">
          <h2><%= @wiki.title %><h2>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= markdown(@wiki.body) %>
        </div>
      </div>
    </div>
    <div class="col-4 marg-top">
    <% if @wiki.private %>
      <div class="col-12 text-center">
        <h3> Owner: </h3> <h4> <%= @wiki.owner %> </h4>
      </div>
      <div class="col-12 text-center">
        <h3 class="marg-top"> Collaborators </h3>
      </div>
      <% @wiki.users.each do |user| %>
      <div class="col-12 text-center">
        <h5> <%= user.name %> </h5>
      </div>
      <% end %>
      <div class="col-12 text-center marg-bot marg-top">
        <%= link_to "Edit Collaborators", edit_collaborator_path(wiki_id: @wiki.id), class: 'btn btn-success' %>
      </div>
    <% end %>
      <div class="col-12 text-center marg-bot">
        <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      </div>
      <% if @wiki.owner && @wiki.owner == current_user %>
        <div class="col-12 text-center">
          <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this wiki?"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
